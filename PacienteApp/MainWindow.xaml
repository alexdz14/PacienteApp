<Window x:Class="PacienteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paciente - Historial y Citas" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Historial Clínico">
                <DataGrid x:Name="dgHistorial" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHora}" Width="150"/>
                        <DataGridTextColumn Header="Diagnóstico" Binding="{Binding Diagnostico}" Width="*"/>
                        <DataGridTextColumn Header="Tratamiento" Binding="{Binding Tratamiento}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Citas Médicas">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="📅 Próximas Citas" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <DataGrid x:Name="dgCitasFuturas" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,15">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHora}" Width="150"/>
                                <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" Width="*"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Text="🕰️ Citas Pasadas" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
                        <DataGrid x:Name="dgCitasPasadas" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHora}" Width="150"/>
                                <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" Width="*"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Notificaciones">
                <StackPanel Margin="10">
                    <TextBlock Text="Notificaciones recientes:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox x:Name="lstNotificaciones"/>
                </StackPanel>
            </TabItem>

        </TabControl>
        <Button Content="Cerrar Sesión"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,0,10,0"
        Click="CerrarSesion_Click"/>

    </Grid>
</Window>
